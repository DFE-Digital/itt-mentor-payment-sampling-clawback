{% set orgEmailAddress = claim.orgEmailAddress %}
{% set orgPhone = claim.orgPhone %}
{% set orgWebsite = claim.orgWebsite %}

<h2 class="govuk-heading-m govuk-!-margin-top-9">
  Contact details
</h2>


{{ govukSummaryList({
  rows: [
    {
      key: {
        text: "Email address"
      },
      value: {
        text: orgEmailAddress if orgEmailAddress.length else "Not entered",
        classes: "govuk-hint" if not orgEmailAddress.length
      }
    },
    {
      key: {
        text: "Telephone number"
      },
      value: {
        text: claim.orgPhone if claim.orgPhone.length else "Not entered",
        classes: "govuk-hint" if not claim.orgPhone.length
      }
    },
    {
      key: {
        text: "Website"
      },
      value: {
        text: (claim.orgWebsite | urlize | safe) if claim.orgWebsite.length else "Not entered",
        classes: "govuk-hint" if not claim.orgWebsite.length
      }
    },
    {
      key: {
        text: "Address"
      },
      value: {
        html: address
      }
    }
  ]
}) }}