<div class="app-search-form">
  <form>
    {{ govukInput({
      id: "search[name]",
      name: "search[name]",
      label: {
        text: "Search by organisation name or (postcode)",
        classes: "govuk-label--s app-search-form__label"
      },
      value: data.search.name
    }) }}

    {{ govukButton({
      text: "Search",
      classes: "app-search-form__button"
    }) }}
  </form>

  {% if data.search.name %}
    <p class="govuk-!-margin-top-2 govuk-!-margin-bottom-0"><a class="govuk-link--no-visited-state" href="/organisations/clear-search">Clear search</a></p>
  {% endif %}
</div>